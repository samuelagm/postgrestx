{
  "name": "@postgrestx/core",
  "version": "0.2.1",
  "private": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "postgrestx-generate": "./dist/bin/generate-types.cjs"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/samuelagm/postgrestx",
    "directory": "packages/core"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "prepack": "pnpm run build",
    "lint": "eslint .",
    "test": "vitest run",
    "test:e2e": "vitest run --reporter=verbose test-e2e",
    "generate:types": "node ./dist/bin/generate-types.cjs"
  },
  "peerDependencies": {
    "axios": "^1.7.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^22.17.2",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.2.4"
  }
}
