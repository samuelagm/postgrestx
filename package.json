{
    "name": "postgrestx-monorepo",
    "private": true,
    "packageManager": "pnpm@9.12.0",
    "type": "module",
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev --parallel",
        "lint": "turbo run lint",
        "lint:fix": "turbo run lint -- --fix",
        "test": "turbo run test",
        "test:e2e": "pnpm --filter @postgrestx/core run test:e2e",
        "clean": "turbo run clean && rm -rf node_modules .turbo",
        "format": "prettier -w ."
    },
    "devDependencies": {
        "@eslint/js": "^9.11.1",
        "@types/react": "^18.3.11",
        "@types/react-dom": "^18.3.0",
        "eslint": "^9.11.1",
        "prettier": "^3.3.3",
        "turbo": "^2.0.6",
        "typescript": "^5.6.3",
        "typescript-eslint": "^8.8.1",
        "vitest": "^3.0.5"
    },
    "prettier": {
        "singleQuote": true,
        "semi": false
    },
    "version": "0.0.1"
}
