{
  "name": "postgrestx-monorepo",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "test": "turbo run test",
    "test:e2e": "pnpm --filter @postgrestx/core run test:e2e",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "format": "prettier -w .",
    "prepare": "husky",
    "docs:api": "typedoc && node scripts/postprocess-typedoc.mjs",
    "docs:dev": "pnpm docs:api && vitepress dev docs",
    "docs:build": "pnpm docs:api && vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "eslint": "^9.11.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.3.3",
    "turbo": "^2.0.6",
    "typedoc": "^0.28.10",
    "typedoc-plugin-markdown": "^4.8.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.1",
    "vitepress": "^1.3.4",
    "vitest": "^3.0.5"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "version": "0.0.1"
}
