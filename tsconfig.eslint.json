{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@postgrestx/core": [
                "packages/core/dist/index.d.ts"
            ],
            "@postgrestx/core/*": [
                "packages/core/dist/*"
            ],
            "@postgrestx/tanstack": [
                "packages/tanstack/src/index.ts"
            ],
            "@postgrestx/tanstack/*": [
                "packages/tanstack/src/*"
            ]
        }
    },
    "include": [
        "packages/**/src/**/*.ts",
        "packages/**/test/**/*.ts",
        "packages/**/bin/**/*.ts",
        "eslint.config.mjs"
    ]
}